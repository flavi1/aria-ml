{
    "manifest_version": 3,
    "name": "AriaML Engine",
    "version": "1.4",
    "description": "Standard AriaML : NÃ©gociation et rendu natif sans blocage.",
    "permissions": [
        "declarativeNetRequest",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
	"web_accessible_resources": [
		{
		  "resources": ["converter.js"],
		  "matches": ["<all_urls>"]
		}
	],
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }]
    },
    "incognito": "spanning"
}
